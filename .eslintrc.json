{
    "extends": ["airbnb-base"],
    "rules": {
        "brace-style": ["error", "stroustrup"],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "class-methods-use-this": "off",
        "arrow-body-style": ["error", "always"],
        "no-prototype-builtins": "off",
        "no-restricted-syntax": "off"
    },
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    }
}